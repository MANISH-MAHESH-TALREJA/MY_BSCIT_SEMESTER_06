<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        style="@style/MainHorizontalLinearLayout">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtQSTN"
            style="@style/QuizStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cousine"
            android:padding="@dimen/_5sdp"
            android:text="@string/question"
            android:textColor="#000000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtSelectedANS"
            style="@style/QuizStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/selected_answer"
            android:textColor="#FF0000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtActualANS"
            style="@style/QuizStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/correct_answer"
            android:textColor="#008000" />
    </LinearLayout>
</androidx.cardview.widget.CardView>