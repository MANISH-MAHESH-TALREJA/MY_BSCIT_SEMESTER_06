<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/MainLinearLayout">

        <LinearLayout style="@style/CardLinearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/SPM"
                style="@style/SubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/SubjectImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/que_papers" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/IOT"
                style="@style/SubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/SubjectImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/que_banks" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout style="@style/CardLinearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/AWP"
                style="@style/SubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/SubjectImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/key_nov_18" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AI"
                style="@style/SubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/SubjectImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/key_nov_19" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/LSA"
            style="@style/SubjectCard"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_gravity="center"
                android:baselineAligned="false"
                android:gravity="center"
                style="@style/SmallHorizontalLinearLayout">

                <ImageView
                    style="@style/SubjectImage"
                    android:contentDescription="@string/app_name"

                    app:srcCompat="@drawable/papers" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/SubjectText"

                    android:text="@string/syllabus" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
