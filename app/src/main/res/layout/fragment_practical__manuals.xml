                        app:srcCompat="@drawable/lsa" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/lsa_prac" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/EJ"
                style="@style/SubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/SubjectImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/amp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/SubjectText"

                        android:text="@string/ej_prac" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
