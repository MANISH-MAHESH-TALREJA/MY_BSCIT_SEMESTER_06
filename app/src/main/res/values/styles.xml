<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#1D9B36</item>
        <item name="colorPrimaryDark">#FA0A64</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/artifika</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuizStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#1D9B36</item>
        <item name="colorPrimaryDark">#FA0A64</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/cousine</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="PopTabText">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="textAllCaps">true</item>
    </style>

    <style name="SubjectCard">
        <item name="android:layout_width">@dimen/_125sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="SubjectImage">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="SubjectText">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="HorizontalSubjectCard">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_height">@dimen/_125sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>

    <style name="HorizontalCardImage">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_65sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="HorizontalSubjectText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>

    <style name="SubjectCardWithSmallText">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/_225sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/_35sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_35sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:backgroundTint">@color/colorAccentDark</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>

    <style name="RegisterEditTextStyle">
        <item name="android:layout_width">@dimen/_290sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edit_style</item>
        <item name="android:drawableStart">@drawable/ic_baseline_vpn_key_24</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="RegisterStyle">
        <item name="android:layout_width">@dimen/_290sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edit_style</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="RegisterSmallEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edit_style</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="CardLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MainHorizontalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SmallHorizontalLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
