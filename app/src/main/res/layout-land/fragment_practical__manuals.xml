<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/MainHorizontalLinearLayout">

        <LinearLayout
            style="@style/CardLinearLayout"
            android:layout_margin="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/SPM"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/black" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"
                        android:text="@string/spm_manual" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/IOT"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"
                        app:srcCompat="@drawable/iot" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"
                        android:text="@string/iot_manual" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            style="@style/CardLinearLayout"
            android:layout_margin="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/AWP"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/awp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/awp_manual" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AI"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/ai" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/ai_manual" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            style="@style/CardLinearLayout"
            android:layout_margin="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/LSA"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/lsa" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/lsa_manual" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/EJ"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/amp" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/ej_manual" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
