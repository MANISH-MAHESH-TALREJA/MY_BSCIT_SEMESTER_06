<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout style="@style/MainHorizontalLinearLayout">

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            style="@style/CardLinearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/SPM"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_5sdp"
                        android:fontFamily="@font/artifika"
                        android:text="@string/question_paper"
                        android:textAlignment="center"
                        android:textSize="@dimen/_25sdp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/IOT"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/question_banks" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            style="@style/CardLinearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/AWP"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/ans_key_nov_18" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AI"
                style="@style/HorizontalSubjectCard"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout style="@style/SmallHorizontalLinearLayout">

                    <ImageView
                        style="@style/HorizontalCardImage"
                        android:contentDescription="@string/app_name"

                        app:srcCompat="@drawable/books" />

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/HorizontalSubjectText"

                        android:text="@string/ans_key_nov_19" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/LSA"
            style="@style/HorizontalSubjectCard"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout style="@style/SmallHorizontalLinearLayout">

                <ImageView
                    style="@style/HorizontalCardImage"
                    android:contentDescription="@string/app_name"

                    app:srcCompat="@drawable/papers" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/HorizontalSubjectText"

                    android:text="@string/syllabus" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
